@page
@model RegisterModel

@{
    ViewData["Title"] = "Регистрация";
}

<style>
    :root {
        --blue: #0b5ed7;
        --blue-2: #0d6efd;
        --yellow: #ffcc33;
        --yellow-2: #ffc107;
        --ink: #0b1b34;
        --muted: rgba(11,27,52,.70);
        --border: rgba(0,0,0,.10);
        --shadow: 0 18px 55px rgba(0,0,0,.10);
        --radius: 18px;
    }

    /* page */
    .pg-page {
        min-height: calc(100vh - 120px);
        display: grid;
        place-items: center;
        padding: 40px 16px;
    }

    /* card */
    .pg-card {
        width: min(720px, 100%);
        background: #fff;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        overflow: hidden;
    }

    .pg-top {
        padding: 26px 26px 18px 26px;
        border-bottom: 1px solid rgba(0,0,0,.06);
        background: linear-gradient(135deg, rgba(255, 204, 51, .22), rgba(13, 110, 253, .10));
    }

    .pg-title {
        margin: 0 0 6px 0;
        font-size: 26px;
        font-weight: 900;
        letter-spacing: -0.02em;
        color: var(--ink);
        line-height: 1.15;
    }

    .pg-subtitle {
        margin: 0;
        color: var(--muted);
        line-height: 1.45;
        max-width: 56ch;
        font-size: 14px;
    }

    .pg-body {
        padding: 22px 26px 26px 26px;
    }

    /* validation */
    .pg-validation {
        border: 1px solid rgba(220, 53, 69, .24);
        background: rgba(220, 53, 69, .06);
        padding: 12px;
        border-radius: 14px;
        margin-bottom: 14px;
    }

    /* form */
    .pg-form {
        display: grid;
        gap: 14px;
    }

    .pg-field {
        display: grid;
        gap: 8px;
    }

    .pg-label {
        font-weight: 800;
        font-size: 13px;
        color: var(--ink);
        letter-spacing: .01em;
    }

    .pg-inputWrap {
        position: relative;
    }

    /* icon: fixed square box => no crooked svg */
    .pg-iconBox {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        width: 34px;
        height: 34px;
        border-radius: 12px;
        display: grid;
        place-items: center;
        background: rgba(13, 110, 253, .06);
        border: 1px solid rgba(13, 110, 253, .12);
        color: var(--blue);
        pointer-events: none;
    }

        .pg-iconBox svg {
            width: 18px;
            height: 18px;
            display: block; /* removes baseline weirdness */
        }

    .pg-input {
        width: 100%;
        padding: 14px 14px 14px 52px; /* space for icon box */
        border-radius: 14px;
        border: 1px solid rgba(0,0,0,.14);
        outline: none;
        font-size: 15px;
        color: var(--ink);
        background: #fff;
        transition: box-shadow .15s ease, border-color .15s ease;
    }

        .pg-input::placeholder {
            color: rgba(11,27,52,.40);
        }

        .pg-input:focus {
            border-color: rgba(13, 110, 253, .55);
            box-shadow: 0 0 0 4px rgba(13, 110, 253, .14);
        }

    .pg-error {
        font-size: 13px;
        color: #dc3545;
    }

    /* buttons */
    .pg-actions {
        display: grid;
        gap: 10px;
        margin-top: 4px;
    }

    .pg-btn {
        border: none;
        width: 100%;
        border-radius: 14px;
        padding: 14px 16px;
        font-weight: 900;
        cursor: pointer;
        transition: transform .06s ease, filter .15s ease, box-shadow .15s ease;
    }

        .pg-btn:active {
            transform: translateY(1px);
        }

    .pg-primary {
        color: #082042;
        background: #fcd251;
        box-shadow: 0 12px 26px rgba(255, 193, 7, .22);
        border: 1px solid rgba(255, 193, 7, .35);
    }

        .pg-primary:hover {
            filter: brightness(1.02);
        }

    .pg-link {
        display: inline-flex;
        justify-content: center;
        text-decoration: none;
        width: 100%;
        border-radius: 14px;
        padding: 14px 16px;
        font-weight: 900;
        color: var(--blue);
        background: rgba(13, 110, 253, .06);
        border: 1px solid rgba(13, 110, 253, .18);
    }

        .pg-link:hover {
            box-shadow: 0 0 0 4px rgba(13, 110, 253, .10);
        }

    .pg-foot {
        margin-top: 12px;
        font-size: 12.5px;
        color: rgba(11,27,52,.60);
        line-height: 1.45;
    }
</style>

<div class="pg-page">
    <div class="pg-card">
        <div class="pg-top">
            <h1 class="pg-title">Регистрация</h1>
            <p class="pg-subtitle">
                Създай профил, за да подаваш заявки за събития.
            </p>
        </div>

        <div class="pg-body">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="pg-form" novalidate>
                <div asp-validation-summary="ModelOnly" class="pg-validation text-danger" role="alert"></div>

                <div class="pg-field">
                    <label class="pg-label" asp-for="Input.FullName">Име и фамилия</label>
                    <div class="pg-inputWrap">
                        <span class="pg-iconBox" aria-hidden="true">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M20 21a8 8 0 0 0-16 0" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                <path d="M12 12a5 5 0 1 0-5-5 5 5 0 0 0 5 5Z" stroke="currentColor" stroke-width="2" />
                            </svg>
                        </span>
                        <input asp-for="Input.FullName" class="pg-input" autocomplete="name" aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.FullName" class="pg-error"></span>
                </div>

                <div class="pg-field">
                    <label class="pg-label" asp-for="Input.Email">Имейл</label>
                    <div class="pg-inputWrap">
                        <span class="pg-iconBox" aria-hidden="true">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M4 6h16v12H4V6Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                <path d="m4 7 8 6 8-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </span>
                        <input asp-for="Input.Email" class="pg-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Input.Email" class="pg-error"></span>
                </div>

                <div class="pg-field">
                    <label class="pg-label" asp-for="Input.Password">Парола</label>
                    <div class="pg-inputWrap">
                        <span class="pg-iconBox" aria-hidden="true">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M7 11V8a5 5 0 0 1 10 0v3" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                <path d="M6 11h12v10H6V11Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                            </svg>
                        </span>
                        <input asp-for="Input.Password" class="pg-input" autocomplete="new-password" aria-required="true" placeholder="********" />
                    </div>
                    <span asp-validation-for="Input.Password" class="pg-error"></span>
                </div>

                <div class="pg-field">
                    <label class="pg-label" asp-for="Input.ConfirmPassword">Повтори парола</label>
                    <div class="pg-inputWrap">
                        <span class="pg-iconBox" aria-hidden="true">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M7 11V8a5 5 0 0 1 10 0v3" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                <path d="M6 11h12v10H6V11Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                <path d="m9 16 2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </span>
                        <input asp-for="Input.ConfirmPassword" class="pg-input" autocomplete="new-password" aria-required="true" placeholder="********" />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="pg-error"></span>
                </div>

                <div class="pg-actions">
                    <button id="registerSubmit" type="submit" class="pg-btn pg-primary">
                        Регистрация
                    </button>

                    <a class="pg-link" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">
                        Вече имаш профил? Вход
                    </a>
                </div>

                <div class="pg-foot">
                    С регистрация приемаш общите условия и политиката за поверителност.
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
