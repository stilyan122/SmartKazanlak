@page
@model LoginModel
@{
    ViewData["Title"] = "Вход";
}

<style>
    :root {
        --blue: #0b5ed7;
        --blue-2: #0d6efd;
        --yellow: #ffcc33;
        --yellow-2: #ffc107;
        --ink: #0b1b34;
        --muted: rgba(11,27,52,.70);
        --border: rgba(0,0,0,.10);
        --shadow: 0 18px 55px rgba(0,0,0,.10);
        --radius: 18px;
    }

    .pg-page {
        min-height: calc(100vh - 120px);
        display: grid;
        place-items: center;
        padding: 40px 16px;
    }

    .pg-card {
        width: min(720px, 100%);
        background: #fff;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        overflow: hidden;
    }

    .pg-top {
        padding: 26px 26px 18px 26px;
        border-bottom: 1px solid rgba(0,0,0,.06);
        background: linear-gradient(135deg, rgba(13, 110, 253, .10), rgba(255, 204, 51, .22));
    }

    .pg-title {
        margin: 0 0 6px 0;
        font-size: 26px;
        font-weight: 900;
        letter-spacing: -0.02em;
        color: var(--ink);
        line-height: 1.15;
    }

    .pg-subtitle {
        margin: 0;
        color: var(--muted);
        line-height: 1.45;
        max-width: 56ch;
        font-size: 14px;
    }

    .pg-body {
        padding: 22px 26px 26px 26px;
    }

    .pg-validation {
        border: 1px solid rgba(220, 53, 69, .24);
        background: rgba(220, 53, 69, .06);
        padding: 12px;
        border-radius: 14px;
        margin-bottom: 14px;
    }

    .pg-form {
        display: grid;
        gap: 14px;
    }

    .pg-field {
        display: grid;
        gap: 8px;
    }

    .pg-label {
        font-weight: 800;
        font-size: 13px;
        color: var(--ink);
        letter-spacing: .01em;
    }

    .pg-inputWrap {
        position: relative;
    }

    .pg-iconBox {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        width: 34px;
        height: 34px;
        border-radius: 12px;
        display: grid;
        place-items: center;
        background: rgba(13, 110, 253, .06);
        border: 1px solid rgba(13, 110, 253, .12);
        color: var(--blue);
        pointer-events: none;
    }

        .pg-iconBox svg {
            width: 18px;
            height: 18px;
            display: block;
        }

    .pg-input {
        width: 100%;
        padding: 14px 14px 14px 52px;
        border-radius: 14px;
        border: 1px solid rgba(0,0,0,.14);
        outline: none;
        font-size: 15px;
        color: var(--ink);
        background: #fff;
        transition: box-shadow .15s ease, border-color .15s ease;
    }

        .pg-input::placeholder {
            color: rgba(11,27,52,.40);
        }

        .pg-input:focus {
            border-color: rgba(13, 110, 253, .55);
            box-shadow: 0 0 0 4px rgba(13, 110, 253, .14);
        }

    .pg-error {
        font-size: 13px;
        color: #dc3545;
    }

    /* remember me */
    .pg-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
        margin-top: 2px;
    }

    .pg-check {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        user-select: none;
        font-weight: 800;
        font-size: 13px;
        color: var(--ink);
    }

        .pg-check input {
            width: 18px;
            height: 18px;
            accent-color: var(--blue);
            cursor: pointer;
        }

    .pg-linkSmall {
        font-weight: 800;
        font-size: 13px;
        color: var(--blue);
        text-decoration: none;
    }

        .pg-linkSmall:hover {
            text-decoration: underline;
        }

    /* buttons */
    .pg-actions {
        display: grid;
        gap: 10px;
        margin-top: 6px;
    }

    .pg-btn {
        border: none;
        width: 100%;
        border-radius: 14px;
        padding: 14px 16px;
        font-weight: 900;
        cursor: pointer;
        transition: transform .06s ease, filter .15s ease, box-shadow .15s ease;
    }

        .pg-btn:active {
            transform: translateY(1px);
        }

    .pg-primary {
        color: #082042;
        background: #fcd251;
        box-shadow: 0 12px 26px rgba(255, 193, 7, .22);
        border: 1px solid rgba(255, 193, 7, .35);
    }

        .pg-primary:hover {
            filter: brightness(1.02);
        }

    .pg-linkBtn {
        display: inline-flex;
        justify-content: center;
        text-decoration: none;
        width: 100%;
        border-radius: 14px;
        padding: 14px 16px;
        font-weight: 900;
        color: var(--blue);
        background: rgba(13, 110, 253, .06);
        border: 1px solid rgba(13, 110, 253, .18);
    }

        .pg-linkBtn:hover {
            box-shadow: 0 0 0 4px rgba(13, 110, 253, .10);
        }

    .pg-foot {
        margin-top: 12px;
        font-size: 12.5px;
        color: rgba(11,27,52,.60);
        line-height: 1.45;
    }

        .pg-foot a {
            color: var(--blue);
            font-weight: 800;
            text-decoration: none;
        }

            .pg-foot a:hover {
                text-decoration: underline;
            }
</style>

<div class="pg-page">
    <div class="pg-card">
        <div class="pg-top">
            <h1 class="pg-title">Вход</h1>
            <p class="pg-subtitle">
                Влез в профила си, за да подаваш и следиш заявки за събития.
            </p>
        </div>

        <div class="pg-body">
            <form id="account" method="post" class="pg-form" novalidate>
                <div asp-validation-summary="ModelOnly" class="pg-validation text-danger" role="alert"></div>

                <div class="pg-field">
                    <label class="pg-label" asp-for="Input.Email">Имейл</label>
                    <div class="pg-inputWrap">
                        <span class="pg-iconBox" aria-hidden="true">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M4 6h16v12H4V6Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                <path d="m4 7 8 6 8-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </span>
                        <input asp-for="Input.Email" class="pg-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Input.Email" class="pg-error"></span>
                </div>

                <div class="pg-field">
                    <label class="pg-label" asp-for="Input.Password">Парола</label>
                    <div class="pg-inputWrap">
                        <span class="pg-iconBox" aria-hidden="true">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M7 11V8a5 5 0 0 1 10 0v3" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                <path d="M6 11h12v10H6V11Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                            </svg>
                        </span>
                        <input asp-for="Input.Password" class="pg-input" autocomplete="current-password" aria-required="true" placeholder="********" />
                    </div>
                    <span asp-validation-for="Input.Password" class="pg-error"></span>

                    <div class="pg-row">
                        <label class="pg-check" asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>

                        <a class="pg-linkSmall" id="forgot-password" asp-page="./ForgotPassword">
                            Забравена парола?
                        </a>
                    </div>
                </div>

                <div class="pg-actions">
                    <button id="login-submit" type="submit" class="pg-btn pg-primary">
                        Вход
                    </button>

                    <a class="pg-linkBtn" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                        Нямаш профил? Регистрация
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
